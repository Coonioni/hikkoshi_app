<%= render 'shared/flash_messages' %>

<h1>投稿一覧</h1>
<div class="text-red"><% @posts.each do |post| %>
  <%= post.id %>
  <%= post.post_content %>
  <%= post.address %>


<% if user_signed_in? %>
  <%= link_to "編集", edit_post_path(post.id), method: :get %>
  <%= link_to "詳細", post_path(post.id), method: :get %>
<% end %>
</div>
<% end %>

<p><%= link_to "投稿", "/posts/new", :class => "color-blue" %></p>
